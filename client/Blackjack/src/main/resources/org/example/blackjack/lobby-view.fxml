<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.blackjack.LobbyController">
    <Label text="Lobby" style="-fx-font-size: 24px;"/>
    <Label text="Vyberte herní mód:"/>
    <ComboBox fx:id="gameModeComboBox">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Solo"/>
                <String fx:value="Duo"/>
            </FXCollections>
        </items>
    </ComboBox>
    <Button text="Vstoupit do místnosti" onAction="#joinRoom"/>
    <Button text="Vytvořit místnost" onAction="#createRoom"/> <!-- Nové tlačítko -->
    <Label text="Dostupné místnosti:"/>
    <ListView fx:id="roomsListView" prefHeight="200.0"/>
    <Button text="Obnovit seznam místností" onAction="#refreshRooms"/>
    <Label fx:id="statusLabel" text=""/>
</VBox>
