<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.blackjack.ConnectController">
    <children>
        <Label text="Server Connection"/>
        <TextField fx:id="ipField" promptText="Enter IP address"/>
        <TextField fx:id="portField" promptText="Enter Port"/>
        <Button text="Connect" onAction="#connectToServer"/>
        <Label fx:id="statusLabel" text=""/>
    </children>
</VBox>
