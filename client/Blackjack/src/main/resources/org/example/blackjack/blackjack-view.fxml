<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.blackjack.BlackjackController">
    <Label text="Blackjack Game" style="-fx-font-size: 24px;"/>
    <HBox alignment="CENTER" spacing="20.0">
        <VBox alignment="CENTER" spacing="5.0">
            <Label text="Player Cards"/>
            <HBox fx:id="playerCards"/>
            <Label fx:id="playerScore" text="Player Score: 0"/>
        </VBox>
        <VBox alignment="CENTER" spacing="5.0">
            <Label text="Dealer Cards"/>
            <HBox fx:id="dealerCards"/>
            <Label fx:id="dealerScore" text="Dealer Score: 0"/>
        </VBox>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Button text="Hit" fx:id="btnHit" onAction="#hit"/>
        <Button text="Stand" fx:id="btnStand" onAction="#stand"/>
        <Button text="New Game" fx:id="btnNewGame" onAction="#newGame"/>
        <Button text="Back to lobby" fx:id="btnBackToLobby" onAction="#backToLobby"/>
    </HBox>
    <Label fx:id="messageLabel" text="Click 'New Game' to start!" style="-fx-font-size: 16px;"/>
</VBox>
